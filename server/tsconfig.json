{
	"compilerOptions": {
	  "target": "ES6",
	  "module": "commonjs",  // Use commonjs for Node.js compatibility
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "outDir": "./dist",   // Output directory for compiled files
	  "typeRoots": [
		"./node_modules/@types",
		"./types"
	  ]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
  }
  