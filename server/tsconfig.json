{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "CommonJS",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "outDir": "./dist",
	  "sourceMap": true,          // For debugging with source maps
	  "baseUrl": "./src",         // To avoid relative import paths like ../../../
	  "paths": {
		"*": ["node_modules/*", "src/types/*"] // Custom paths for types or modules
	  },
	  "resolveJsonModule": true   // If you're working with JSON files
	},
	"include": ["src"],
	"exclude": ["node_modules"]
  }
  